<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_card_background"
    android:padding="16dp"
    android:elevation="8dp">

    <!-- Place Name -->
    <TextView
        android:id="@+id/text_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- Place Type -->
    <TextView
        android:id="@+id/text_place_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Type"
        android:textSize="14sp"
        android:textColor="@color/gray" />

    <!-- Open/Close Status -->
    <TextView
        android:id="@+id/text_place_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open/Close Info"
        android:textSize="14sp"
        android:textColor="@color/lime_7" />

    <!-- Distance -->
    <TextView
        android:id="@+id/text_place_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/button_navigate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Navigate"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_directions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Directions"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>