<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mypage.MypageFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_mypage"
        style="@style/AppToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        app:title="@string/appbar_title_mypage" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <!--Title 시작 -->
    <View
        android:id="@+id/view_title_mypage_area"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/background_lime7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_vi_title_polygon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="300dp"
        android:src="@drawable/ic_polygon"
        app:layout_constraintBottom_toBottomOf="@id/view_title_mypage_area"
        app:layout_constraintEnd_toEndOf="@id/view_title_mypage_area"
        app:layout_constraintStart_toStartOf="@id/view_title_mypage_area"
        app:layout_constraintTop_toTopOf="@id/view_title_mypage_area" />

    <ImageView
        android:id="@+id/image_vi_title_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_cold_2"
        app:layout_constraintBottom_toBottomOf="@id/image_vi_title_polygon"
        app:layout_constraintEnd_toEndOf="@id/image_vi_title_polygon"
        app:layout_constraintStart_toStartOf="@id/image_vi_title_polygon"
        app:layout_constraintTop_toTopOf="@id/image_vi_title_polygon" />

    <TextView
        android:id="@+id/tv_title_search"
        style="@style/DetailCardDisease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이 페이지"
        app:layout_constraintBottom_toBottomOf="@+id/view_title_mypage_area"
        app:layout_constraintEnd_toEndOf="@id/view_title_mypage_area"
        app:layout_constraintStart_toStartOf="@id/view_title_mypage_area"
        app:layout_constraintTop_toTopOf="@id/view_title_mypage_area" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>